[Unit]
Description=Workflow Builder API (FastAPI on 8080)
After=network.target docker.service
Wants=docker.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/Workflow-Builder/server
Environment=PATH=/home/ubuntu/Workflow-Builder/server/.venv/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=/home/ubuntu/Workflow-Builder/server/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
